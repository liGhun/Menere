<UserControl x:Class="Menere.Controls.AccountListboxForAdding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch">
        <Button Name="button_add_account" Style="{DynamicResource ResourceKey=button_without_border}" Click="button_add_account_Click" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            <Image Name="image_account_type" Source="{Binding Path=icon_path}" HorizontalAlignment="Center" />
        </Button>
    </Grid>
</UserControl>
