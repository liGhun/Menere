<Window x:Class="Menere.UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meneré" Height="596.833" Width="941"
        xmlns:controls="clr-namespace:Menere.Controls"
        xmlns:model="clr-namespace:Menere.Model"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Background="{DynamicResource ResourceKey=color_main_background}"
        Foreground="{DynamicResource ResourceKey=color_main_foreground}" Icon="/Menere;component/Images/MenereIcon.ico">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type model:FeverItem}">
                <controls:ItemBox x:Name="item" HorizontalAlignment="Stretch" DataContext="{Binding}" Margin="0,0,6,0" />
            </DataTemplate>
        </Grid.Resources>
        <ListBox Background="{DynamicResource ResourceKey=color_main_background}" ToolTip="Select feed to filter items list"
        Foreground="{DynamicResource ResourceKey=color_main_foreground}" Name="listbox_feeds" Margin="10,167,0,36.8" HorizontalAlignment="Left" Width="178" SelectionChanged="listbox_feeds_SelectionChanged"/>
        <ListBox Background="{DynamicResource ResourceKey=color_main_background}"
        Foreground="{DynamicResource ResourceKey=color_main_foreground}" Name="listbox_items" Margin="193,38,10.4,0" SelectionChanged="listbox_items_SelectionChanged" Height="139" VerticalAlignment="Top" PreviewKeyDown="listbox_items_PreviewKeyDown">

        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="17,146,0,0" TextWrapping="Wrap" Text="Feeds" VerticalAlignment="Top"/>
        <TextBlock  Name="textblock_header_unread_items" HorizontalAlignment="Left" Margin="193,17,0,0" TextWrapping="Wrap" Text="Unread items" VerticalAlignment="Top" RenderTransformOrigin="0.3,-0.336"/>
        <ListBox Name="listbox_groups" Background="{DynamicResource ResourceKey=color_main_background}"
        Foreground="{DynamicResource ResourceKey=color_main_foreground}" HorizontalAlignment="Left" Margin="10,38,0,0" Width="178" Height="103" VerticalAlignment="Top">
            <ListBoxItem Content="To be done..."/>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,17,0,0" TextWrapping="Wrap" Text="Groups" VerticalAlignment="Top" RenderTransformOrigin="-0.96,0.609"/>
        <WebBrowser  Margin="193,227,10.4,9.8" Name="webbrowser"/>
        <TextBlock Name="textblock_item_title" Margin="193,182,10.4,0" TextWrapping="NoWrap" Text="Item title" VerticalAlignment="Top" Height="40" FontWeight="Bold" FontSize="18"/>
        <TextBlock Name="textblock_feed_title" Margin="193,204,10.4,0" TextWrapping="NoWrap" Text="Feed title" VerticalAlignment="Top" Height="40"  FontSize="12" Foreground="{DynamicResource ResourceKey=color_feed_name_header}"/>
        <Button Name="button_refresh" Content="Refresh" HorizontalAlignment="Right" Margin="0,11,10.4,0" VerticalAlignment="Top" Width="75" Click="button_refresh_Click"/>
        <Button Name="button_remove_feed_filter" Content="Remove feed filter" HorizontalAlignment="Left" Margin="10,0,0,9.8" VerticalAlignment="Bottom" Width="178" Click="button_remove_feed_filter_Click"/>
        <xctk:WatermarkTextBox Name="textbox_filter_text" Watermark="Search in entries..." TextChanged="textbox_filter_text_TextChanged" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,90.4,0" Width="195"/>
    </Grid>
</Window>
